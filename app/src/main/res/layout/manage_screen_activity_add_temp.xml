<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:orientation="vertical"
    android:paddingHorizontal="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal">

        <com.google.android.material.card.MaterialCardView
            android:id="@id/activity_preview"
            android:layout_width="136dp"
            android:layout_height="0dp"
            app:cardCornerRadius="8dp"
            app:strokeColor="?attr/colorOutline"
            app:layout_constraintDimensionRatio="H,9:16"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/feature_types">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/border_shadow">

                <LinearLayout
                    android:id="@id/preview_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_below="@id/preview_statusbar"
                    android:background="?attr/colorSurface"
                    android:gravity="center_vertical"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/arrow_back_white_48dp"
                        app:tint="?attr/colorOnSurface" />
                </LinearLayout>

                <LinearLayout
                    android:id="@id/preview_statusbar"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="#ff000000"
                    android:gravity="right"
                    android:orientation="horizontal"
                    android:padding="2dp">

                    <ImageView
                        android:layout_width="6dp"
                        android:layout_height="6dp"
                        android:layout_marginRight="2dp"
                        android:src="@drawable/ic_wifi_white_24dp" />

                    <ImageView
                        android:layout_width="6dp"
                        android:layout_height="6dp"
                        android:src="@drawable/ic_medium_battery_white_24dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@id/preview_drawer"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:background="?attr/colorSurfaceContainerHigh"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_margin="16dp"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/android_icon" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="8dp"
                        android:background="?attr/colorOutlineVariant" />
                </LinearLayout>

                <RelativeLayout
                    android:id="@id/preview_keyboard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true">

                    <ImageView
                        android:id="@id/preview_fab"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_above="@id/img_keyboard"
                        android:layout_alignParentRight="true"
                        android:padding="4dp"
                        android:src="@drawable/fab_color" />

                    <ImageView
                        android:id="@id/img_keyboard"
                        android:layout_width="match_parent"
                        android:layout_height="83dp"
                        android:layout_alignParentBottom="true"
                        android:scaleType="fitEnd"
                        android:src="@drawable/android_keyboard" />
                </RelativeLayout>
            </RelativeLayout>

        </com.google.android.material.card.MaterialCardView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@id/feature_types"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/activity_preview"
            app:layout_constraintTop_toTopOf="@+id/activity_preview"
            tools:listitem="@layout/manage_screen_activity_add_feature_item" />

        <TextView
            android:id="@id/tv_warning"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:gravity="center"
            tools:text="Warning: this is a useful information for the user"
            android:textAppearance="?attr/textAppearanceBodySmall"
            app:layout_constraintTop_toBottomOf="@id/feature_types"
            app:layout_constraintEnd_toEndOf="@id/feature_types"
            app:layout_constraintStart_toStartOf="@id/feature_types" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@id/ti_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        android:importantForAutofill="noExcludeDescendants">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@id/ed_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter activity name"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:lines="1" />
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:animateLayoutChanges="true"
        android:paddingBottom="16dp">

        <HorizontalScrollView
            android:id="@+id/type_group_wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:scrollbars="none">

            <com.google.android.material.button.MaterialButtonToggleGroup
                android:id="@+id/type_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:checkedButton="@id/type_activity"
                app:selectionRequired="true"
                app:singleSelection="true">

                <Button
                    android:id="@+id/type_activity"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Activity" />

                <Button
                    android:id="@+id/type_fragment"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fragment" />

                <Button
                    android:id="@+id/type_dialog_fragment"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DialogFragment" />
            </com.google.android.material.button.MaterialButtonToggleGroup>
        </HorizontalScrollView>

        <HorizontalScrollView
            android:id="@+id/orientation_group_wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:scrollbars="none">

            <com.google.android.material.button.MaterialButtonToggleGroup
                android:id="@+id/orientation_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:checkedButton="@id/orientation_portrait"
                app:selectionRequired="true"
                app:singleSelection="true">

                <Button
                    android:id="@+id/orientation_portrait"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Portrait" />

                <Button
                    android:id="@+id/orientation_landscape"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Landscape" />

                <Button
                    android:id="@+id/orientation_both"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Both" />
            </com.google.android.material.button.MaterialButtonToggleGroup>
        </HorizontalScrollView>

        <HorizontalScrollView
            android:id="@+id/keyboard_group_wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:scrollbars="none">

            <com.google.android.material.button.MaterialButtonToggleGroup
                android:id="@+id/keyboard_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:checkedButton="@id/keyboard_unspecified"
                app:selectionRequired="true"
                app:singleSelection="true">

                <Button
                    android:id="@+id/keyboard_unspecified"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Unspecified" />

                <Button
                    android:id="@+id/keyboard_visible"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Visible" />

                <Button
                    android:id="@+id/keyboard_hidden"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hidden" />
            </com.google.android.material.button.MaterialButtonToggleGroup>
        </HorizontalScrollView>
    </LinearLayout>
</LinearLayout>