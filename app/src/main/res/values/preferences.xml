<resources>
    <!-- Default style for M3EditTextPreference. -->
    <attr name="m3EditTextPreferenceStyle" format="reference" />

    <declare-styleable name="M3EditTextPreference">
        <attr name="helperText" format="string" />
        <attr name="hintText" format="string" />
    </declare-styleable>

    <style name="Preference.AppTheme" parent="Preference.Material">
        <item name="android:layout">@layout/preference_layout</item>
        <item name="iconSpaceReserved">false</item>
    </style>

    <style name="Preference.AppTheme.DialogPreference" parent="Preference.DialogPreference.Material">
        <item name="android:negativeButtonText">@string/common_word_cancel</item>
        <item name="android:positiveButtonText">@string/common_word_save</item>
        <item name="android:layout">@layout/preference_layout</item>
        <item name="iconSpaceReserved">false</item>
    </style>

    <style name="Preference.AppTheme.DialogPreference.EditTextPreference">
        <item name="android:dialogLayout">@layout/preference_layout_dialog_edittext</item>
        <item name="android:layout">@layout/preference_layout</item>
        <item name="iconSpaceReserved">false</item>
    </style>

    <style name="Preference.AppTheme.SwitchPreferenceCompat" parent="Preference.SwitchPreferenceCompat.Material">
        <item name="android:layout">@layout/preference_layout</item>
        <item name="android:widgetLayout">@layout/preference_widget_switch</item>
        <item name="iconSpaceReserved">false</item>
    </style>

    <style name="PreferenceThemeOverlay.AppTheme" parent="PreferenceThemeOverlay">
        <item name="android:scrollbars">none</item>
        <item name="m3EditTextPreferenceStyle">@style/Preference.AppTheme.DialogPreference.EditTextPreference</item>
        <item name="dialogPreferenceStyle">@style/Preference.AppTheme.DialogPreference</item>
        <item name="preferenceStyle">@style/Preference.AppTheme</item>
        <item name="switchPreferenceCompatStyle">@style/Preference.AppTheme.SwitchPreferenceCompat</item>
    </style>
</resources>
